<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email</title>

    <style>
    .body{
        border: gray 1px solid;
        border-radius: 5px;
        width: 1100px;
        margin: auto;
        display: block;
        padding-top: 20px;
        padding-bottom: 20px;
        background-color: lightgrey;
    }
    h1 {
        font-size: 25px;
        text-align: center;
        font-family: 'Andalus';
        padding-bottom: 20px;
    }
    .product-info{
        background-color: rgb(219, 219, 219);
        border-radius: 10px;
        margin: auto;
        width: 900px;
        display: block;
        padding: 10px;
        border: rgb(141, 208, 230) 1px solid;
    }
    
    .v-name{
        font-size: 40px;
        font-weight: bold;
        margin-left: 7px;
        margin-right: 7px;
    }

    .u-building{
        font-size: 40px;
        font-weight: bold;
        margin-left: 7px;
    }

    table{
        display: block;
        margin: auto;
    }

    .thead-amount{
        width: 170px;
    }

    .thead-description{
        width: 390px;
    }

    .thead-qty{
        width: 170px;
    }

    .thead-price{
        width: 170px;
    }

    .td-amount{
        width: 170px;
        border: gray 1px solid;
        padding-left: 5px;
    }

    .td-desc{
        width: 390px;
        border: gray 1px solid;
        padding-left: 5px;
    }

    .td-qty{
        width: 170px;
        border: gray 1px solid;
        padding-left: 5px;
    }

    .td-price{
        width: 170px;
        border: gray 1px solid;
        padding-left: 5px;
    }

    .total-div{
        display: flex;
        justify-content: center;
        align-items: flex-end;
        float: right;
        position: absolute;
    }

    .total-boxes{
        font-size: 30px;
        font-weight: bold;
        margin-right: 7px;
    }

    .total-price{
        font-size: 30px;
        font-weight: bold;
        margin-left: 7px;
    }

    .total-boxes-p{
        font-size: 25px;
        font-family: 'Times New Roman', Times, serif;
        margin-right: 10px;
    }

    .total-price-p{
        font-size: 25px;
        font-family: 'Times New Roman', Times, serif;
        margin-left: 10px;
    }
    </style>
</head>
<body>
    <div class="body">
        <% for(let vendor of vendors){ %>
            <% for(let user of users){ %>
                <% if (vendor.vendorId === vendorId) { %>
                    <h1>Order For <span class="v-name"><%= vendor.companyname %></span>
                        From UTA Mesivta <span class="u-building">#<%= user.building %></span></h1>
                <% } %>
            <% } %>
        <% } %>
            <div class="product-info">
                <table>
                    <thead>
                        <th class="thead-amount">Amount</th>
                        <th class="thead-description">Description</th>
                        <th class="thead-qty">Qty</th>
                        <th class="thead-price">Price</th>
                        <th class="thead-price">Total Price</th>
                    </thead>
                    <tbody>
                    <% for(let order of orders){ %>
                        <tr>
                            <td class="td-amount"><%= order.amount %></td>
                            <td class="td-desc"><%= order.productdesc %></td>
                            <td class="td-qty"><%= order.qty %></td>
                            <td class="td-price">$<%= parseFloat(order.price).toFixed(2) %></td>
                            <td class="td-price">$<%= parseFloat(order.totalrowprice).toFixed(2) %></td>
                        </tr>                       
                    <% } %>
                    </tbody>
                </table>    
            </div>
            <div class="total-div">
            <% for(let totalOrder of totalOrders){ %>
                <% if (totalOrder.orderId === orderId) { %>
                <p class="total-boxes-p">Total Boxes: <span class="total-boxes"><%= totalOrder.totalboxes %></span></p>
                <p class="total-price-p">Total Price: <span class="total-price"><%= totalOrder.totalprice %></span></p>
            <% } %>
            <% } %>
            </div>
        </div>
</body>
</html>