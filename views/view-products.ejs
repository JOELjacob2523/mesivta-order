<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/view-products.css">
    <title>Create Product</title>
</head>
<body>
    <h1>Welcome to UTA Mesivta of Kiryes Joel</h1>
    <div>
        <% for(let vendor of vendors){ %>
            <% if (vendor.vendorId === vendorId) { %>
                <h2>You are making an order for <span class="companyname"><%= vendor.companyname %></span></h2>
            <% } %>
        <% } %>
    </div>

    <div class="go-back">
        <p class="back-p">Click here to go back to previous page</p>
        <form action="/main" method="GET">
            <input type="submit" value="Go Back" class="back">
        </form>
    </div>

    <div class="create">
        <h3>Create new product</h3>
        <form action="/createProduct" method="POST">
            <div class="description">
                <input type="textarea" rows="4" name="description" class="description" placeholder="Description...">
            </div>
            <div class="qty">
                <input type="number" class="per-cs" name="perCase" placeholder="Per Case...">
            </div>
            <div class="price">
                <input type="number" class="price" name="price" step="0.01" placeholder="Price...">
            </div>
            <div class="submit">
                <input type="submit" value="Submit" class="submit-p">
            </div>
        </form>
    </div>

    <div>
        <div class="headers">
            <p class="p-header">No.</p> 
            <p class="p-header">Amount</p> 
            <p class="p-header">Description</p> 
            <p class="p-header">Qty Per Case</p> 
            <p class="p-header">Price</p> 
            <p class="p-header">Total Boxes</p> 
            <p class="p-header">Total Price</p>
        </div>
        <form action="/orderDetails" method="POST">
                <% for(let product of products){ %>
                    <% for(let vendor of vendors){ %>
                        <% if (product.vendorId === vendor.vendorId) { %>
                <div class="details">
                    <input type="text" value="1" class="details-desc" readonly>
                    <input type="text" name="amount" class="details-desc">
                    <input type="text" value="<%= product.description %>" name="productdesc" class="details-desc" readonly>
                    <input type="text" value="<%= product.perCase %>" name="qty" class="details-desc" readonly>
                    <input type="text" value="$<%= product.price %>" name="price" class="details-desc" readonly>
                    <input type="text" value="6" name="totalboxes" class="details-desc" readonly>
                    <input type="text" value="$7" name="totalprice" class="details-desc" readonly>
                </div>
                <% } %>
              <% } %>
            <% } %>
            <div class="submit-order-div">
        <input type="submit" value="Submit Order" class="submit-order">
    </div>
    </form>
    </div>
    <script
     src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous">

    </script>

</body>
</html>