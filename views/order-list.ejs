<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/order-list.css">
    <title>Order List</title>
</head>
<body>
        <h1>Welcome to UTA Mesivta of Kiryes Joel</h1>
     <div class="go-back-div">
        <button type="button" class="go-back-btn" onclick="window.location.replace('/viewProducts')">Go Back</button>
    </div>

    <div class="orderDiv">
    <% for (let item of itemsDates) { %>
    <div class="items-div">
                <ol class="ol">
                    <li class="li"><%= item.amount %></li>
                    <li class="li"><%= item.productdesc %></li>
                    <li class="li"><%= item.qty %></li>
                    <li class="li"><span class="prefix">$</span><%= item.price %></li>
                    <li class="li"><%= item.date.toLocaleString('en-US', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit'}) %></li>
                </ol>
            </div>
        <% } %>
    </div>
    
</body>
</html>