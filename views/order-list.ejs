<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/order-list.css">
    <title>Order List</title>
</head>
<body>
        <h1>Welcome to UTA Mesivta of Kiryes Joel</h1>
     <div class="go-back-div">
        <button type="button" class="go-back-btn" onclick="window.location.replace('/viewProducts')">Go Back</button>
    </div>

    <button onclick="window.print()" class="print_btn">Print This Page</button>

    <div class="orderDiv">
    <div class="items-div">
                <ol class="ol">       
                    <% for (let between of betweenOrders) { %>
                    <li class="li" ondblclick="window.location.href = '/between/<%= between.orderId %>'">
                        <div class="date-div">
                            <p class="order-num-p">Order Number:
                                <span><%= between.orderId %></span>
                            </p>
                            <p>Order Date:
                                <span><%= between.date.toLocaleString('en-US', { timeZone: 'UTC', year: 'numeric', month: '2-digit', day: '2-digit'}) %></span>
                        </p>
                    </div>
                    </li>
                    <% } %>
                </ol>
            </div>
    </div>
    
</body>
</html>