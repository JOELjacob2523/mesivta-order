<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/order-detail.css">
    <title>Order List</title>
</head>
<body>
        <h1>Welcome to UTA Mesivta of Kiryes Joel</h1>
     <div class="go-back-div">
        <button type="button" class="go-back-btn" onclick="window.history.go(-1)">Go Back</button>
    </div>

    <button onclick="window.print()" class="print_btn">Print This Page</button>

    <div class="orderDiv">
    <div class="items-div">
        <table>
            <thead>
                <th>Amount</th>
                <th>Description</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Date & Time</th>
            </thead>
            <tbody>
                <% for (let item of itemsDates) { %>
            <tr>
                <td><%= item.amount %></td>
                <td><%= item.productdesc %></td>
                <td><%= item.qty %></td>
                <td><span>$</span><%= parseFloat(item.price).toFixed(2) %></td>
                <td><%= item.date.toLocaleString('en-US', { timeZone: 'UTC', year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit'}) %></td>
            </tr>
             <% } %>
            </tbody>
        </table>
        </div>
        <div>
            <% for (let getTotal of getTotals) { %>
                <div class="total-div">
            <p class="boxes-p">Total Boxes is:<span class="total"><%= getTotal.totalboxes %></span></p>
            <p class="price-p">Total Price is:<span class="total"><%= getTotal.totalprice %></span></p>
                </div>
            <% } %>
        </div>
    </div>
    
</body>
</html>